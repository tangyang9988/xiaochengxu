<van-row>
  <van-col span="8">
    <van-cell title="药品名称"/>
  </van-col>
  <van-col span="16">
    <van-field
     placeholder="请输入药品名称"
    value="{{medicine_name}}"
    bind:change="onChange1"/>
  </van-col>
</van-row>
<van-row>
  <van-col span="8">
    <van-cell title="供应商"/>
  </van-col>
  <van-col span="16">
    <van-field
     placeholder="请输入供应商"
    value="{{supplier}}"
    bind:change="onChange2"/>
  </van-col>
</van-row>
<van-row>
  <van-col span="8">
    <van-cell title="低库存阀值设置"/>
  </van-col>
  <van-col span="16">
   <van-field
    value="{{minimum}}"
    border="{{ true }}"
    bind:change="onFieldChange"/>
  </van-col>
</van-row>

  <van-row>
    <van-col span="12">
      <van-cell title="是否在用"/>
    </van-col>
    <van-col span="12">
    <van-cell>
    <van-switch checked="{{ is_active }}" bind:change="onChange" size="24px" />
    </van-cell>
    </van-col>
  </van-row>
