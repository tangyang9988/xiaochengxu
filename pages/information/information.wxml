<!-- 选择公司 -->
<van-row>
	<van-col span="6" offset="1">
		<view class="circleProgress" ></view>
	</van-col>
	<van-col span="17">
		<van-dropdown-menu>
			<van-dropdown-item style="font-size:18px;" value="{{companySelectValue}}" options="{{ companyDropMenu }}" bind:change="onChange" />
		</van-dropdown-menu>
	</van-col>
	<!-- <van-col span="8"></van-col> -->
</van-row>

<!-- 当日未完成审核量 -->
<van-row>
	<van-col span="1" offset="1" style="font-size:12px;color:#999999;">
		<view style="width: 5px;height: 15px; background: #E4EAFB;"></view>
	</van-col>
	<van-col span="9" style="font-size:9px;color:#999999;">当日未完成审核量 (个)</van-col>
	<van-col span="1" offset="1">
		<view class="circleProgress" style=" background-color: #2C65F7; margin-top:4px;"></view>
	</van-col>
	<van-col span="5" style="font-size:9px;color:#999999;">占比{{information.daily_dosage_percentage}}</van-col>
  	<van-col span="1" offset="1">
		<view class="circleProgress" style=" background-color: #E4ECFF; margin-top:4px;"></view>
	</van-col>
	<van-col span="4" style="font-size:9px;color:#999999;">总量{{information.daily_all_dosage}}</van-col> 
</van-row>

<view style="width: 5px;height: 10px; "></view>

<!-- 进度条 -->
<van-row>
	<van-col span="6" offset="2">
		<view style="margin-left:10px;">
			<p class="progressNote">{{information.daily_not_finish_count}}</p>
		</view>
	</van-col>

	<van-col offset="2" span="12" style="margin-top:5px;height:21px;padding-top:5px;">
		<van-progress stroke-width="8" percentage="{{information.daily_dosage_percentage_number}}" />
	</van-col>
</van-row>

<!-- 当日药剂消耗量 -->
<!-- <van-cell title="当日药剂消耗量(kg)" value="库存：{{information.company_storage_sum}}">
</van-cell> -->
<view style="width: 5px;height: 15px; "></view>
<van-row >
	<van-col span="1" offset="1" style="font-size:12px;color:#999999;">
		<view style="width: 5px;height: 15px; background: #E4EAFB;"></view>
	</van-col>
	<van-col span="7"  style="font-size:9px;color:#999999;">当日药剂消耗量 (kg)</van-col>
	<van-col span="1" offset="1">
		<view class="circleProgress" style=" background-color: #f2826a; margin-top:4px;"></view>
	</van-col>
	<van-col span="4" style="font-size:9px;color:#999999;">占比{{information.daily_consume_percentage_str}}</van-col>
   	<van-col span="1" >
		<view class="circleProgress" style=" background-color: #E4ECFF; margin-top:4px;"></view>
	</van-col>
	<van-col span="8" style="font-size:9px;color:#999999;">库存{{information.company_storage_sum}}</van-col>
</van-row>

<view style="width: 5px;height: 10px; "></view>

<van-row>
	<van-col span="6" offset="2">
		<view style="margin-left:10px;">
			<p class="progressNote">{{information.daily_consume}}</p>
		</view>
	</van-col>

	<van-col offset="2" span="12" style="margin-top:5px;height:21px;padding-top:5px;">
		<van-progress stroke-width="8" color="#f2826a" percentage="{{information.daily_consume_percentage}}" />
	</van-col>
</van-row>

<!-- 饼状图---开始 -->
<van-row>
	<van-col span="12">
		<view>
			<canvas canvas-id="ringCanvas" class="canvas" bindtouchstart="touchHandler"></canvas>
		</view>
	</van-col>
  <!-- 题注 -->
	<van-col span="12">
		<block wx:for="{{echartMedicineList}}">
      <view style="width: 5px;height: 5px; "></view>
			<van-row >
				<van-col span="3">
					<view class="circle" style=" background-color: {{item.color}}; margin-top:7px;"></view>
				</van-col>
				<van-col span="21">
					<p style="font-size:11px"> {{item.name}} {{item.data}}kg </p>
				</van-col>
				<!-- <van-col span="8">span: 8</van-col> -->
			</van-row>
		</block>
	</van-col>
</van-row>
<!-- 饼状图---结束 -->

