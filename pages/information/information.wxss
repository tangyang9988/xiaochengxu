/* 进度条样式覆盖 */
.van-progress {
  margin-top: 10px;
}

/* 圆形 */
.circle {
  display: block;
  border-radius: 50%;
  height: 8px;
  width: 8px;
  margin: 0;
  background-color: black;
}

/* 进度条circle */
.circleProgress {
  display: block;
  border-radius: 50%;
  height: 8px;
  width: 8px;
  margin: 0;
}

/* 水质第一行 */
.waterData {
  font-size: 14px;
  font-weight: 700;
  margin-left: 10px;
  margin-top: 20px;
}

/* 水质第二行 */
.waterNote {
  font-size: 10px;
  color: #999999;
  margin-left: 10px;
}

/* 进度条标题 */
.progressNote {
  font-size: 14px;
  font-weight: 700;
}

