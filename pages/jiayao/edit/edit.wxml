<!-- 首次提交 -->
<view wx:if="{{status==1 || status==3}}">
<van-cell-group>
  <van-field
    disabled
    value="{{dosing_time}}"
    label="加药时间"
    border="{{ true }}"
    bind:change="onChange1"/>
</van-cell-group>
<van-cell-group>
  <van-field
    disabled
    value="{{position}}"
    label="加药点位"
    border="{{ true }}"
     bind:change="onChange2"/>
</van-cell-group>
<van-cell-group>
  <van-field
    disabled
    value="{{medicine_name}}"
    label="药剂名称"
    border="{{ true }}"
    bind:change="onChange3"/>
</van-cell-group>
<van-cell-group>
  <van-field
    disabled
    value="{{medicine_count}}"
    label="加药量"
    border="{{ true }}"
    bind:change="onChange4"/>
</van-cell-group>
  <van-cell-group>
  <van-field
    disabled
    value="张晓明"
    label="加药员"
    placeholder="请输入加药员"
    border="{{ true }}"/>
</van-cell-group>
<van-cell-group>
  <van-field wx:if="{{status==2}}"
    disabled
    value="{{content}}"
    label="审核意见"
    type="textarea"
    placeholder="请输入审核意见"
    rows="1"
    autosize
    bind:change="onChange"/>
</van-cell-group>
</view>
